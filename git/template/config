[user]
        name = {{GIT_NAME}}
        email = {{GIT_EMAIL}}
[core]
        editor = vim
        excludesfile = {{DOT_PATH}}/git/ignore
        autocrlf = input
[merge]
        tool = vimdiff
[alias]
        unstage = reset HEAD --
        last = log -1 HEAD
        st = status
        sd = diff --staged
        sh = stash
        discard = checkout --
        log-v = show --name-status
        cpm = cherry-pick -m 1 --no-commit
        co = checkout
        # switch to a branch, creating it if necessary
        go = "!f() { git checkout -b \"$1\" 2> /dev/null || git checkout \"$1\"; }; f"
        dm = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d && git remote prune origin"
        p = push
        po = "!git push -u origin $(git symbolic-ref HEAD | sed -e 's#^refs/heads/##')"
[push]
        default = simple
[pull]
        rebase = true
[commit]
        template = {{DOT_PATH}}/git/commit-template/{{GIT_TEMPLATE}}
[color]
        branch = auto
        diff = auto
        status = auto

