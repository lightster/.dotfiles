{
  "permissions": {
    "allow": [
      "Bash(npm run check:*)",
      "Bash(npm run codegen:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(tail:*)",
      "Bash(git check-ignore:*)",
      "Bash(git checkout:*)",
      "Bash(git pull)",
      "Bash(git push:*)"
    ],
    "defaultMode": "default"
  },
  "model": "opusplan",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.dotfiles/claude/hooks/validate-git-push.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "source ~/.dotfiles/git/bin/git-prompt.sh 2>/dev/null; basename=$(basename \"$(pwd)\"); GIT_OPTIONAL_LOCKS=0; git_info=$(__git_ps1 \" (%s)\" 2>/dev/null || true); BLUE=$(printf '\\033[34m'); YELLOW=$(printf '\\033[33m'); RESET=$(printf '\\033[0m'); printf \"%s%s%s%s%s\\n\" \"$BLUE\" \"$basename\" \"$YELLOW\" \"$git_info\" \"$RESET\""
  },
  "enabledPlugins": {
    "feature-dev@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "github@claude-plugins-official": true
  }
}
